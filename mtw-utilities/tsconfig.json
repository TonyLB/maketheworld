{
    "compilerOptions": {
      "rootDir": "ts",
      "outDir": "./dist",
      "target": "es2020",
      "strict": true,
      "preserveConstEnums": true,
      "noEmit": true,
      "sourceMap": true,
      "module":"es2015",
      "moduleResolution":"node",
      "esModuleInterop": true, 
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "checkJs": false,
      "noImplicitAny": false
    },
    "include": ["ts/**/*"],
    "exclude": ["node_modules", "**/*.test.ts", "**/*.test.js", "**/__snapshots__/*"]
}