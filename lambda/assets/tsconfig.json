{
    "compilerOptions": {
      "target": "es2020",
      "strict": true,
      "preserveConstEnums": true,
      "noEmit": true,
      "module": "es2015",
      "moduleResolution": "node",
      "esModuleInterop": true, 
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,  
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,
      "allowJs": true,
      "checkJs": false,
      "noImplicitAny": false
    },
    "exclude": ["node_modules", "**/*.test.ts", "**/*.test.js", "**/__mocks__/*", "**/__snapshots__/*"]
  }