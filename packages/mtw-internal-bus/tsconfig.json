{
    "compilerOptions": {
      "rootDir": "ts",
      "outDir": "dist",
      "target": "es2020",
      "strict": true,
      "preserveConstEnums": true,
      "noImplicitOverride": true,
      "module":"es2015",
      "moduleResolution":"node",
      "esModuleInterop": true, 
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "checkJs": false,
      "noImplicitAny": false,
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true
    },
    "exclude": ["node_modules", "**/*.test.ts", "**/*.test.js", "**/__snapshots__/*", "dist"]
}